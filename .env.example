# Interactive Brokers Configuration
# ====================================
# TWS Paper Trading: port 7497
# TWS Live Trading: port 7496
# IB Gateway Paper: port 4002
# IB Gateway Live: port 4001

IB_HOST=127.0.0.1
IB_PORT=7497
IB_CLIENT_ID=1
IB_PAPER_TRADING=True

# Risk Management
# ====================================
MAX_POSITION_SIZE=0.1         # Maximum 10% of portfolio per position
RISK_LIMIT=0.02               # Maximum 2% daily loss limit
MAX_DAILY_TRADES=100          # Maximum trades per day

# Order Settings
# ====================================
DEFAULT_ORDER_TYPE=MARKET     # MARKET, LIMIT, STOP, STOP_LIMIT
ENABLE_SHORT_SELLING=False

# Data Settings
# ====================================
DEFAULT_BAR_SIZE=1 day        # Bar size for historical data
MAX_DATA_POINTS=10000         # Maximum data points to fetch

# Monitoring & Alerting
# ====================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Email Alerts (Gmail)
# ====================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
ALERT_EMAIL=alerts@yourdomain.com

# SMS Alerts (Twilio)
# ====================================
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_FROM_NUMBER=+1234567890
ALERT_PHONE=+1987654321

# Database
# ====================================
DATABASE_URL=postgresql://user:password@localhost:5432/portfolio_db
REDIS_URL=redis://localhost:6379/0

# Application Settings
# ====================================
DEBUG=False
LOG_LEVEL=INFO
